{
  "project": {
    "readingOrder": {
      "priority": [
        "README.md",
        "**/README.md",
        "package.json",
        "tsconfig.json"
      ],
      "strategy": "readme_first"
    },
    "codeModification": {
      "enforceReadmeUpdate": true,
      "enforceChangelogUpdate": true,
      "ignorePatterns": ["node_modules/**", "build/**", "dist/**"]
    },
    "documentation": {
      "changelogSection": "## 更新记录",
      "dateFormat": "YYYY-MM-DD"
    },
    "aiAssistance": {
      "contextStrategy": "hierarchical",
      "maxContextDepth": 3,
      "prioritizeMetadata": true
    }
  }
} 